@model List<UserList>
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <br />
    <h3>Home Page</h3>
    <div class="d-flex flex-wrap flex-md-row">
        @if (Model.Count == 0 || Model == null)
        {
           <div class="text-red-600">
               <p> Data Not Found</p>
           </div>
        }
        else
        {
            <div class="row d-xxl-inline-flex">
                @foreach (var i in Model)
                {
                    <div class="card m-2" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@i.UserId</h5>
                            <h5 class="card-title">@i.UserName</h5>
                            <p class="card-text">@i.UserAddress</p>
                            <a asp-action="Details" asp-route-id="@i.EncId">Details</a>
                        </div> 
                    </div>
                }
            </div>
        }

    </div>
</div>
